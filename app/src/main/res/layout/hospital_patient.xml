<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/l_pid">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="Patient Id:"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"/>
                <EditText
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/pid"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/l_pdeath"
                android:layout_below="@+id/l_pid">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="Cause of Death:"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"/>
                <EditText
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/p_death"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/l_d_t_death"
                android:layout_below="@+id/l_pdeath">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="Date and time of Death:"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"/>
                <EditText
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:layout_marginLeft="20dp"
                    android:hint="DD/MM/YYYY"
                    android:id="@+id/d_p_death"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l_d_t_death"
                android:paddingLeft="150dp"
                android:paddingTop="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Submit"
                    android:id="@+id/submit"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>